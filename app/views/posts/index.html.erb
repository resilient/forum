<div class="posts">

	<div class="row-fluid">
		<div class="span6">
			<h1><small>Posts</small></h1>
		</div>
	  <div class="span6">
			<p class="text-right add-button"><%= link_to 'New Post', new_post_path, class: "btn btn-small btn-primary" %></p>
		</div>
	</div>

	<% @posts.each do |post| %>
		<div class="row-fluid">
			<div class="span8">
			  <p class="lead"><%= link_to post.title, post %></p>
			</div>
			<div class="span4">
			  <p class="text-right">
			    Created at <i><%= post.created_at.to_time.strftime('%H:%M %e.%m.%Y') %></i> by <b><%= post.user.username %></b>
			  </p>
			</div>
		</div>
		<div class="row-fluid admin-links">
			<p class="text-right">
				<small>
				  <%= link_to 'Show', post %>
				  <% if can? :update, post %>
				    <%= link_to 'Edit', edit_post_path(post) %>
					<% end %>
				  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
				</small>
			</p>
		</div>
	<% end %>
</div>
