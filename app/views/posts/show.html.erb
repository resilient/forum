<div class="post">
	<div class="row-fluid">
		<p class="text-left">
			<small>
			  <% if can? :update, @post %>
			    <%= link_to 'Edit', edit_post_path(@post) %>
			  <% end %>
			  <% if can? :destroy, @post %>
			    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
			  <% end %>
			</small>
		</p>
		<p class="text-right">
		  Created at <i><%= @post.created_at.to_time.strftime('%H:%M %e.%m.%Y') %></i> by <b><%= @post.user.username %></b>
		</p>
	</div>
	<div class="thumbnail">
		<div class="row-fluid">
			<h2><%= @post.title %></h2>
		</div>
		<div class="row-fluid">
		  <%= @post.body %>
		</div>
	</div>

  <div class="row-fluid">
    <p class="text-right add-button"><%= link_to 'Answer', new_post_answer_path(@post), class: "btn btn-small btn-primary" %></p>
  </div>

  <% @post.answers.each do |answer| %>
		<div class="row-fluid message">
			<div class="span2">
				<small>
					<b>Author:</b> <%= answer.user.username %><br>
					<i><%= answer.created_at.to_time.strftime('%H:%M %e.%m.%Y') %></i>
				</small>
			</div>
			<div class="span10">
	 	    <%= answer.message %>
			</div>
		</div>
	<% end %>
</div>








