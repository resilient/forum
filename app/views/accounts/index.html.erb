<div class="users">

	<div class="row-fluid">
		<div class="span6">
			<h1><small>Users</small></h1>
		</div>
	  <div class="span6">
			<p class="text-right add-button"><%= link_to 'Create User', new_account_path, class: "btn btn-small btn-primary" %></p>
		</div>
	</div>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>

		<% @users.each do |user| %>
	    <tr>
	      <td><%= user.username %></td>
	      <td><%= user.email %></td>
	      <td><%= user.role.humanize %></td>
	      <td><%= link_to 'Edit', edit_account_path(user) %></td>
	      <td><%= link_to 'Delete', "/accounts/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    </tr>
		<% end %>

    </tbody>
  </table>

</div>
