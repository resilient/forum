<%= form_for(@user,  url: accounts_url(@user), html: {method: :post, class: 'form-signin' }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error" id="error_explanation">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="form-signin-heading">New user</h2>

  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input-block-level" %>

  <%= f.text_field :username, placeholder: "Username", class: "input-block-level" %>

  <%= f.password_field :password, placeholder: "Password", class: "input-block-level" %>

  <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "input-block-level" %>

  <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>

  <%= f.submit "Create", class: "btn btn-large" %>
<% end %>

